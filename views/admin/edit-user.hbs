<div class="text-center loginform">
    <main class="form-signin m-auto">
  <form action="/admin/edit-user/{{user._id}}" method="POST">
    {{!-- <img class="mb-4" src="/docs/5.2/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57"> --}}
    <h1 class="h3 mb-3 fw-normal">edit user</h1>

    <div class="form-floating mb-2">
      <input type="text" class="form-control" name="name" id="floatingInput" placeholder="Name" value="{{user.name}}">
