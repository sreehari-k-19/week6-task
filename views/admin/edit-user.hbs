    </div>
      <div class="form-floating mb-2">
      <input type="email" class="form-control" name="email" id="floatingInput" placeholder="name@example.com" value="{{user.email}}">
      <label for="floatingInput">Email address</label>
    </div>
      <div class="form-floating mb-2">
      <input type="text" class="form-control" id="floatingInput" name="place" placeholder="name@example.com" value="{{user.place}}">
      <label for="floatingInput">Place</label>
    </div>
       <div class="form-floating mb-2">
      <input type="number" class="form-control" name="age" id="floatingInput" placeholder="Name" value="{{user.age}}">
      <label for="floatingInput">Age</label>
    </div>

   
    <button class="w-100 btn btn-lg btn-primary" type="submit">Update</button>

